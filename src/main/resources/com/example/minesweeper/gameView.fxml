            <font>
                <Font name="Digital-7" size="20.0" />
            </font>
            <padding>
                <Insets left="5.0" right="5.0" />
            </padding>
        </Label>
    </HBox>

    <Pane fx:id="gamePane" prefHeight="400.0" prefWidth="400.0" style="-fx-background-color: #CCCCCC;" />
